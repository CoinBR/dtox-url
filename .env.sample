# ---------- Database (PostgreSQL) ----------
POSTGRES_USER=urlshortener
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=urlshortener

# Host/port as seen by the host machine (not inside Docker network)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ---------- API (Go) ----------
# Port exposed by the API container
API_PORT=8080

# DB connection string the Go app will use *inside* Docker
API_DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=disable

# ---------- UI (Angular) ----------
# Port exposed by the Angular dev server
UI_PORT=4200

# Base URL of the API as seen from the browser
# (host machine reaching the API container)
ANGULAR_API_BASE_URL=http://localhost:${API_PORT}

